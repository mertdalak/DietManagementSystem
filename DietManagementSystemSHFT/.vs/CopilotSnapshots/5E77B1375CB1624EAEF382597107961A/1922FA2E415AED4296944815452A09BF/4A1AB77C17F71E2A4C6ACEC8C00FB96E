using DietManagementSystemSHFT.Entities;
using Microsoft.EntityFrameworkCore;

namespace DietManagementSystemSHFT.Data
{
    public class ApplicationDbContext : DbContext
    {
        public ApplicationDbContext(DbContextOptions<ApplicationDbContext> options) : base(options) { }

        public DbSet<User> Admins { get; set; }
        public DbSet<Dietitian> Dietitians { get; set; }
        public DbSet<Client> Clients { get; set; }
        public DbSet<DietitianClient> DietitianClients { get; set; }
        public DbSet<DietPlan> DietPlans { get; set; }
        public DbSet<Meal> Meals { get; set; }
        public DbSet<MealDetails> MealDetails { get; set; }

        protected override void OnModelCreating(ModelBuilder modelBuilder)
        {
            base.OnModelCreating(modelBuilder);
            // Configure relationships and keys
            modelBuilder.Entity<DietitianClient>()
                .HasKey(dc => new { dc.DietitianId, dc.ClientId });
            // Add further configuration as needed
        }
    }
}
