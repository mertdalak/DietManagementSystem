using FluentValidation;
using DietManagementSystemSHFT.API.CQRS.Queries.MealQueries;

namespace DietManagementSystemSHFT.CQRS.Validators
{
    public class GetMealByIdQueryValidator : AbstractValidator<GetMealByIdQuery>
    {
        public GetMealByIdQueryValidator()
        {
            RuleFor(x => x.Id)
                .NotEmpty().WithMessage("Meal ID is required");
        }
    }
}