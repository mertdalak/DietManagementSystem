using FluentValidation;
using DietManagementSystemSHFT.API.CQRS.Queries.ClientProgressQueries;

namespace DietManagementSystemSHFT.CQRS.Validators
{
    public class GetClientProgressByIdQueryValidator : AbstractValidator<GetClientProgressByIdQuery>
    {
        public GetClientProgressByIdQueryValidator()
        {
            RuleFor(x => x.Id)
                .NotEmpty().WithMessage("Client progress ID is required");
        }
    }
}