using FluentValidation;
using DietManagementSystemSHFT.API.CQRS.Commands.DietitianCommands;

namespace DietManagementSystemSHFT.CQRS.Validators
{
    public class DeleteDietitianCommandValidator : AbstractValidator<DeleteDietitianCommand>
    {
        public DeleteDietitianCommandValidator()
        {
            RuleFor(x => x.Id)
                .NotEmpty().WithMessage("Dietitian ID is required");
        }
    }
}