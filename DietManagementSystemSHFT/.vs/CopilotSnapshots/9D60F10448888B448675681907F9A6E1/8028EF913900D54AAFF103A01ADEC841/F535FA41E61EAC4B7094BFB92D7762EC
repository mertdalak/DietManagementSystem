using FluentValidation;
using DietManagementSystemSHFT.API.CQRS.Commands.MealCommands;

namespace DietManagementSystemSHFT.CQRS.Validators
{
    public class DeleteMealCommandValidator : AbstractValidator<DeleteMealCommand>
    {
        public DeleteMealCommandValidator()
        {
            RuleFor(x => x.Id)
                .NotEmpty().WithMessage("Meal ID is required");
        }
    }
}