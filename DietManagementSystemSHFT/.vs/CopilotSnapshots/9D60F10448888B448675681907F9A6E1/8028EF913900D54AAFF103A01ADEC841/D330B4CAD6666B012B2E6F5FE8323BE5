using FluentValidation;
using DietManagementSystemSHFT.API.CQRS.Queries.DietPlanQueries;

namespace DietManagementSystemSHFT.CQRS.Validators
{
    public class GetDietPlanByIdQueryValidator : AbstractValidator<GetDietPlanByIdQuery>
    {
        public GetDietPlanByIdQueryValidator()
        {
            RuleFor(x => x.Id)
                .NotEmpty().WithMessage("Diet plan ID is required");
        }
    }
}